<script>

document.getElementById("demo_1").onmouseover = function() {mouseOver_1()};
document.getElementById("demo_1").onmouseout = function() {mouseOut_1()};
document.getElementById("demo_2").onmouseover = function() {mouseOver_2()};
document.getElementById("demo_2").onmouseout = function() {mouseOut_2()};
document.getElementById("demo_3").onmouseover = function() {mouseOver_3()};
document.getElementById("demo_3").onmouseout = function() {mouseOut_3()};
document.getElementById("demo_4").onmouseover = function() {mouseOver_4()};
document.getElementById("demo_4").onmouseout = function() {mouseOut_4()};

function mouseOver_1() {
	var x = 0;
	var demo = document.getElementById("demo_1");
	var wpos = 200;
	var hpos = 40;
	var id = setInterval(frame, 5);
	function frame (){
		if (wpos == 220 && hpos == 45){
			clearInterval(id);
		}
		else {
			if(wpos == 220)wpos = 220;else wpos++;
			if(hpos == 45)hpos = 45;else hpos++;
			demo.style.width = wpos + 'px';
			demo.style.height = hpos + 'px';

		}
	}
	demo.style.color = "blue";
}

function mouseOut_1() {
	var x = 0;
	var demo = document.getElementById("demo_1");
	var wpos = 220;
	var hpos = 45;
	var id = setInterval(frame, 5);
	function frame (){
		if (wpos == 200 && hpos == 40){
			clearInterval(id);
		}
		else {
			if(wpos == 200)wpos = 200;else wpos--;
			if(hpos == 40)hpos = 40;else hpos--;
			demo.style.width = wpos + 'px';
			demo.style.height = hpos + 'px';

		}
	}
	demo.style.color = "white";
}
